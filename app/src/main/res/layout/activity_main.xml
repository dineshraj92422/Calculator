<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#090000"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="332dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:foregroundGravity="center"
        android:gravity="center_horizontal"
        android:text="@string/d_s_calculator"
        android:textAlignment="center"
        android:textColor="#03FF03"
        android:textSize="36sp"
        android:textStyle="bold"
        app:autoSizeTextType="uniform" />

    <EditText
        android:id="@+id/edittext"
        android:layout_width="355dp"
        android:layout_height="60dp"
        android:layout_below="@+id/edt1"
        android:layout_centerHorizontal="true"
        android:background="#150E0E"
        android:ems="10"
        android:gravity="end"
        android:textAlignment="textEnd"
        android:textColor="#ffffff"
        android:textSize="36sp" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittext"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="50dp"
        android:background="#1E1A1A"
        android:text="1"
        android:textColor="#02FA0C"
        android:textSize="36sp" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittext"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@+id/btn1"
        android:background="#1E1A1A"
        android:text="2"
        android:textColor="#02FA0C"
        android:textSize="36sp" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn2"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/btn4"
        android:background="#1E1A1A"
        android:text="5"
        android:textColor="#02FA0C"
        android:textSize="36sp" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn8"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/btndot"
        android:background="#1E1A1A"
        android:text="0"
        android:textColor="#02FA0C"
        android:textSize="36sp" />

    <Button
        android:id="@+id/btnmul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnsub"
        android:layout_marginTop="2dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/btn9"
        android:background="#1E1A1A"
        android:text="*"
        android:textColor="#02FA0C"
        android:textSize="36sp" />

    <Button
        android:id="@+id/btndot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn7"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="2dp"
        android:background="#1E1A1A"
        android:text="."
        android:textColor="#02FA0C"
        android:textSize="36sp" />

    <Button
        android:id="@+id/btnclear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn0"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="#1E1A1A"
        android:text="C"
        android:textColor="#00FF0A"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn3"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/btn5"
        android:background="#1E1A1A"
        android:text="6"
        android:textColor="#02FA0C"
        android:textSize="36sp" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittext"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@+id/btn2"
        android:background="#1E1A1A"
        android:text="3"
        android:textColor="#02FA0C"
        android:textSize="36sp" />

    <Button
        android:id="@+id/btnequal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn9"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/btn0"
        android:background="#1E1A1A"
        android:text="="
        android:textColor="#02FA0C"
        android:textSize="36sp" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn6"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/btn8"
        android:background="#1E1A1A"
        android:text="9"
        android:textColor="#02FA0C"
        android:textSize="36sp" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn4"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="2dp"
        android:background="#1E1A1A"
        android:text="7"
        android:textColor="#02FA0C"
        android:textSize="36sp" />

    <Button
        android:id="@+id/btnsub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnadd"
        android:layout_marginTop="2dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/btn6"
        android:background="#1E1A1A"
        android:text="-"
        android:textColor="#02FA0C"
        android:textSize="36sp" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn1"
        android:layout_marginLeft="25dp"

        android:layout_marginTop="2dp"
        android:background="#1E1A1A"
        android:text="4"
        android:textColor="#02FA0C"
        android:textSize="36sp" />

    <Button
        android:id="@+id/btndiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnmul"
        android:layout_marginTop="2dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/btnequal"
        android:background="#1E1A1A"
        android:text="/"
        android:textColor="#02FA0C"
        android:textSize="36sp" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn5"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/btn7"
        android:background="#1E1A1A"
        android:text="8"
        android:textColor="#02FA0C"
        android:textSize="36sp" />

    <Button
        android:id="@+id/btnadd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittext"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/btn3"
        android:background="#1E1A1A"
        android:text="+"
        android:textColor="#02FA0C"
        android:textSize="36sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="284dp"
        android:layout_height="182dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="9dp"
        app:srcCompat="@drawable/ic_money"
        tools:ignore="VectorDrawableCompat" />

    <EditText
        android:id="@+id/edt1"
        android:layout_width="355dp"
        android:layout_height="60dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:background="#150E0E"
        android:ems="10"
        android:gravity="end"
        android:textAlignment="textEnd"
        android:textColor="#FFFFFF"
        android:textSize="36sp" />

</RelativeLayout>